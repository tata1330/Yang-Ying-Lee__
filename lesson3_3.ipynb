    "#BMI值計算公式:    BMI = 體重(公斤) / 身高2(公尺2)\n",
    "\n",
    "weight = eval(input(\"請輸入你的體重(公斤):\"))\n",
    "height = eval(input(\"請輸入你的身高(公分):\"))\n",
    "bmi = weight / (height / 100) ** 2\n",
    "print(\"你的體重是:\", weight,\"(公斤)\",sep='')\n",
    "print(\"你的身高是:\",height,\"(公分)\",sep='')\n",
    "print(\"您的BMI:\",bmi,sep='')\n"
   ]
